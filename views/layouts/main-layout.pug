doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title #{pageTitle}
    link(rel="stylesheet" href="/css/style.css")
    block styles
  body
    header.main-header
      nav.main-header__nav
        ul.main-header__item-list
          li.main-header__brand
            a.active(href="movies.html")
              img(src="../logo.jpg" alt="brand")
          li.main-header__item
            a(href="/", class=(path === '/' ? 'active' : '')) Movies
          li.main-header__item
            a(href="/my-movies", class=(path === '/my-movies' ? 'active' : '')) My Collection
          li.main-header__item
            a(href="/admin/add-movies", class=(path === '/admin/add-movies' ? 'active' : '')) Add Movies
        ul.main-header__item-list
          li.main-header__item
            a(href="login.html") Login
          li.main-header__item
            a(href="signup.html") Signup
          li.main-header__item
            a(href="logout.html") Logout
    main.main-area
      block content
    footer.main-footer
      // Footer area
      nav
        ul.main-footer__links
          li.main-footer__link
            a(href="#") Support
          li.main-footer__link
            a(href="#") Terms of Use
        ul.main-footer__links
          li.main-footer__link
            p All Rights Reserved Â© 2020