<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <header class="main-header">
        <%- include('../includes/navigation.ejs') %>
    </header>
    <main class="main-area">
        <!-- Main area for the movie list -->
        <!-- <h1>Main Area</h1> -->
        <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
       <% } %>
        <div class="signup-page">
            <form action="/login" method="post" class="signup-form">
                <label for="email">E-Mail</label>
                <input class="<%= validationErrors.find(e=>e.param === 'email') ? 'invalid' : '' %>" type="email" id="email"  value="<%= oldInput.email%>" name="email" required>
                <label for="password">Password</label>
                <input class="<%= validationErrors.find(e=>e.param === 'password') ? 'invalid' : '' %>" type="password" id="password"  value="<%= oldInput.password%>" name="password" required>
                <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                <button type="submit" class="button">Log In</button>
            </form>
            
            <a href="/reset">Reset Password</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>

   
   