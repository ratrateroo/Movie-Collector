<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <header class="main-header">
        <%- include('../includes/navigation.ejs') %>
    </header>
    <main class="main-area">
        <!-- Main area for the movie list -->
        <!-- <h1>Main Area</h1> -->
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
           <% } %>

        <div class="signup-page">
            <form action="/signup" method="post" class="signup-form" novalidate>
                <label for="title">Title</label>
                <select id="title" name="title">
                    <option value="mr">Mr.</option>
                    <option value="ms">Ms.</option>
                </select>

                <label for="first-name">First name</label>
                <input type="text" id="first-name" placeholder="Mark" value="<%= oldInput.firstName%>"name="firstName"  >

                <label for="last-name">Last name</label>
                <input type="text" id="last-name" placeholder="Pogi" value="<%= oldInput.lastName%>" name="lastName"  >

                <label for="image">Image</label>
                <input type="file" name="image" id="image">

                <label for="email">E-Mail</label>
                <input class="<%= validationErrors.find(e=>e.param === 'email') ? 'invalid' : '' %>" type="email" id="email" value="<%= oldInput.email%>" name="email" >

                <label for="password">Password</label>
                <input class="<%= validationErrors.find(e=>e.param === 'password') ? 'invalid' : '' %>" type="password" id="password"  value="<%= oldInput.password%>"name="password"  >

                <label for="confirm-password">Confirm Password</label>
                <input class="<%= validationErrors.find(e=>e.param === 'confirmPassword') ? 'invalid' : '' %>" type="password" id="confirm-password"  value="<%= oldInput.confirmPassword%>" name="confirmPassword"  >
                
                <input type="hidden" name="_csrf" value="<%= csrfToken%>">

                <button type="submit" class="button">Sign Up</button>
            </form>
        </div>
    </main>
<%- include('../includes/end.ejs') %>

   
   