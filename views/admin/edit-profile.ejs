<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <header class="main-header">
        <%- include('../includes/navigation.ejs') %>
    </header>
    <main class="main-area">
        <!-- Main area for the movie list -->
        <!-- <h1>Main Area</h1> -->
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
           <% } %>
           <div class="card__image">
            <img src="/<%= user.imageUrl %>" alt="<%= user.fistName %>">
        </div>
        <div class="signup-page">
            <form action="/signup" method="post" class="signup-form" novalidate enctype="multipart/form-data">
                <label for="title">Title</label>
                <select id="title" name="title">
                    <option value="mr">Mr.</option>
                    <option value="ms">Ms.</option>
                </select>

                <label for="first-name">First name</label>
                <input type="text" id="first-name" placeholder="Mark" value="<%= user.firstName%>"name="firstName"  >

                <label for="last-name">Last name</label>
                <input type="text" id="last-name" placeholder="Pogi" value="<%= user.lastName%>" name="lastName"  >

                <label for="email">E-Mail</label>
                <input class="<%= validationErrors.find(e=>e.param === 'email') ? 'invalid' : '' %>" type="email" id="email" value="<%= user.email%>" name="email" >

               
                <label for="image">Image</label>
                <input type="file" name="image" id="image">
                               
                <input type="hidden" name="_csrf" value="<%= csrfToken%>">

                <button type="submit" class="button">Update Profile</button>
            </form>
        </div>
    </main>
<%- include('../includes/end.ejs') %>

   
   